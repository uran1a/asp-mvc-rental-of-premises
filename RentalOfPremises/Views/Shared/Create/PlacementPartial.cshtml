@model RentalOfPremises.Models.Placement
@{
}
<form asp-action="CreatePlacement" asp-controller="@ViewData["Controller"]" method="post" enctype="multipart/form-data">
    @if(!ViewData["Controller"].Equals("Admin"))
    {
        <input type="hidden" asp-for="PhysicalEntityId" value="@ViewData["PhysicalEntityId"]" />
    }
    else
    {
        <div class="default-form-box mb-20">
        <label asp-for="PhysicalEntityId">Id владелеца<span>*</span></label>
        <input type="text" asp-for="PhysicalEntityId" />
        <span asp-validation-for="PhysicalEntityId" />
    </div>
    }
    <div class="default-form-box mb-20">
        <label asp-for="City">Город <span>*</span></label>
        <input type="text" asp-for="City" />
        <span asp-validation-for="City" />
    </div>
    <div class="default-form-box mb-20">
        <label asp-for="Area">Район <span>*</span></label>
        <input type="text" asp-for="Area"/>
        <span asp-validation-for="Area" />
    </div>
    <div class="default-form-box mb-20">
        <label asp-for="Street">Улица <span>*</span></label>
        <input type="text" asp-for="Street"/>
        <span asp-validation-for="Street" />
    </div>
    <div class="default-form-box mb-20">
        <label asp-for="House">Дом <span>*</span></label>
        <input type="text" asp-for="House"/>
        <span asp-validation-asp-for="House" />
    </div>
    <div class="default-form-box mb-20">
        <label asp-for="Square">Площадь <span>*</span></label>
        <input type="number" asp-for="Square"/>
        <span asp-validation-for="Square" />
    </div>
    <div class="default-form-box mb-20">
        <label asp-for="YearConstruction">Дата постройки <span>*</span></label>
        <input type="number" asp-for="YearConstruction" min="1900" max="2023" step="1" value = "2023"/>
        <span asp-validation-for="YearConstruction" />
    </div>
    <div class="default-form-box mb-20">
        <label asp-for="Price">Цена (тыс.руб/месяц)<span>*</span></label>
        <input type="number" asp-for="Price" min="0" />
        <span asp-validation-for="Price" />
    </div>
    <div class="default-form-box mb-20">
        <label asp-for="Description">Дополнительная информация</label>
        <textarea rows="10" cols="45" asp-for="Description"></textarea>
        <span asp-validation-for="Description" />
    </div>
    <div class="default-form-box mb-20">
        <label for="image1">Главное изображение: <span>*</span></label>
        <input type="file" name="images" id="image1" multiple />
        <br/><br/>
        <span validation-for="image1" />
        <label for="image2_3">Дополнительное изображение: <span>*</span></label>
        <input type="file" name="images" id="image2_3" multiple />
        <br/><br/>
        <input type="file" name="images" id="image2_3" multiple />
        <span validation-for="image2_3" />
    </div>
    <br>
    <div class="save_button mt-3">
        <button type="submit" class="btn btn-sm btn-default-outline">Добавить</button>
    </div>
</form>