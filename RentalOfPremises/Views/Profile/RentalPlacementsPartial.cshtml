@model ICollection<RentalOfPremises.Models.Deal>
@if(@Model.Count == 0)
{
    <h2>Нет арендуемых помещений</h2>
}
else
{
    <div class="table_page table-responsive">
        <table>
            <thead>
                <tr>
                    <th>Город</th>
                    <th>Район</th>
                    <th>Улица</th>
                    <th>Дом</th>
                    <th>Владелец</th>
                    <th>Договор</th>
                </tr>
            </thead>
            <tbody>
            @foreach(var deal in @Model)
            {   
                <tr>
                    <td>@deal.Placement.City</td>
                    <td>@deal.Placement.Area</td>
                    <td>@deal.Placement.Street</td>
                    <td>@deal.Placement.House</td>
                    <td>@deal.Owner.Surname @deal.Owner.Name @deal.Owner.Patronymic</td>
                    <td style="min-width: 0;"><a asp-action="Download" asp-controller="Placement" asp-route-id="@deal.Id"><img src="~/images/icons/word_file.png" alt=""></a></td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}