@model ICollection<RentalOfPremises.Models.Placement>
@if(@Model.Count == 0)
{
    <h2>Нет помещений</h2>
}
else
{
    <div class="table_page table-responsive">
        <table>
            <thead>
                <tr>
                    <th>Город</th>
                    <th>Район</th>
                    <th>Улица</th>
                    <th>Дом</th>
                    <th>Площадь</th>
                    <th>Удаление</th>
                </tr>
            </thead>
            <tbody>
            @foreach(var placement in @Model)
            {   
                <tr>
                    <td>@placement.City</td>
                    <td>@placement.Area</td>
                    <td>@placement.Street</td>
                    <td>@placement.House</td>
                    <td>@placement.Square</td>
                    <td><a href="#"><img src="~/images/icons/trash_16.png" alt=""></a></td>
                </tr>
            }
            </tbody>
        </table>
        
    </div>
}
<a class="btn btn-sm btn-default-outline m-3" asp-action="Create" asp-controller="Placement">Добавить помещение</a>

