@model RentalOfPremises.ViewModels.RegisterModel
@{
}
<div class="customer-login section-fluid-270 section-top-gap-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="account_form register">
                    <h2>Регистрация</h2>
                    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
                        <div class="validation" asp-validation-summary="ModelOnly"></div>
                        <div>
                            <div class="default-form-box">
                                <label asp-for="Login">Логин <span>*</span></label><br />
                                <input type="text" asp-for="Login" />
                                <span asp-validation-for="Login" />
                            </div>
                           <div class="default-form-box">
                                <label asp-for="Password">Пароль <span>*</span></label><br />
                                <input type="password" asp-for="Password" />
                                <span asp-validation-for="Password" />
                            </div>
                            <div class="default-form-box">
                                <label asp-for="Name">Имя <span>*</span></label><br />
                                <input type="text" asp-for="Name" />
                                <span asp-validation-for="Name" />
                            </div>
                            <div class="default-form-box">
                                <label asp-for="Surname">Фамилия <span>*</span></label><br />
                                <input type="text" asp-for="Surname" />
                                <span asp-validation-for="Surname" />
                            </div>
                            <div class="default-form-box">
                                <label asp-for="Patronymic">Отчество</label><br />
                                <input type="text" asp-for="Patronymic" />
                                <span asp-validation-for="Patronymic" />
                            </div>
                            @*Установить min дату 100 лет назад, а max 18 лет назад*@
                            <div class="default-form-box">
                                <label asp-for="Data_Of_Birth">Дата рождения <span>*</span></label><br />
                                <input type="date" asp-for="Data_Of_Birth" />
                                <span asp-validation-for="Data_Of_Birth" />
                            </div>
                            <div class="default-form-box">
                                <label asp-for="Mobile_Phone">Моб. телефон</label><br />
                                <input type="text" asp-for="Mobile_Phone" />
                                <span asp-validation-for="Mobile_Phone" />
                            </div>
                            @*Проверка на корректность введенной почты*@
                            <div class="default-form-box">
                                <label asp-for="Email">Электронная почта</label><br />
                                <input type="text" asp-for="Email" />
                                <span asp-validation-for="Email" />
                            </div>
                            @*Проверка на длину серии*@
                            <div class="default-form-box">
                                <label asp-for="Passport_Serial">Серия паспорта <span>*</span></label><br />
                                <input type="number" asp-for="Passport_Serial" />
                                <span asp-validation-for="Passport_Serial" />
                            </div>
                            @*Проверка на длину кода*@
                            <div class="default-form-box">
                                <label asp-for="Passport_Code">Код паспорта <span>*</span></label><br />
                                <input type="number" asp-for="Passport_Code" />
                                <span asp-validation-for="Passport_Code" />
                            </div>
                            <div class="login_submit">
                                <button class="btn btn-sm btn-radius btn-default mb-4" type="submit">Регистрация</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 

