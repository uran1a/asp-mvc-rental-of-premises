@model RentalOfPremises.ViewModels.RegisterModel
@{
}
<h2>Регистрация</h2>
 @*Добавить * возле полей для обязательного ввода*@
<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="Login">Введите логин</label><br />
            <input type="text" asp-for="Login" />
            <span asp-validation-for="Login" />
        </div>
       <div>
            <label asp-for="Password">Введите пароль</label><br />
            <input type="password" asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <label asp-for="Name">Введите имя</label><br />
            <input type="text" asp-for="Name" />
            <span asp-validation-for="Name" />
        </div>
        <div>
            <label asp-for="Surname">Введите фамилию</label><br />
            <input type="text" asp-for="Surname" />
            <span asp-validation-for="Surname" />
        </div>
        <div>
            <label asp-for="Patronymic">Введите отчество</label><br />
            <input type="text" asp-for="Patronymic" />
            <span asp-validation-for="Patronymic" />
        </div>
        @*Установить min дату 100 лет назад, а max 18 лет назад*@
        <div>
            <label asp-for="Data_Of_Birth">Введите дату рождения</label><br />
            <input type="date" asp-for="Data_Of_Birth" />
            <span asp-validation-for="Data_Of_Birth" />
        </div>
        <div>
            <label asp-for="Mobile_Phone">Введите моб. телефон</label><br />
            <input type="text" asp-for="Mobile_Phone" />
            <span asp-validation-for="Mobile_Phone" />
        </div>
        @*Проверка на корректность введенной почты*@
        <div>
            <label asp-for="Email">Введите электронная почта</label><br />
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        @*Проверка на длину серии*@
        <div>
            <label asp-for="Passport_Serial">Введите серию паспорта</label><br />
            <input type="number" asp-for="Passport_Serial" />
            <span asp-validation-for="Passport_Serial" />
        </div>
        @*Проверка на длину кода*@
        <div>
            <label asp-for="Passport_Code">Введите код паспорта</label><br />
            <input type="number" asp-for="Passport_Code" />
            <span asp-validation-for="Passport_Code" />
        </div>
        <div>
            <input type="submit" value="Регистрация" />
        </div>
    </div>
</form>
